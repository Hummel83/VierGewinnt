<Window x:Class="VierGewinnt.View.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:sd="clr-namespace:VierGewinnt.View.WPF.SampleData"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <d:Window.DataContext>
        <sd:MainWindowViewModelSampleData></sd:MainWindowViewModelSampleData>
    </d:Window.DataContext>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="282*"/>
            <RowDefinition Height="37*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="129*"/>
            <ColumnDefinition Width="253*"/>
            <ColumnDefinition Width="135*"/>
        </Grid.ColumnDefinitions>
        <ContentControl Content="{Binding Path=SpielerViewModels[0]}"></ContentControl>
        <ContentControl Grid.Row="2"></ContentControl>
    </Grid>
</Window>